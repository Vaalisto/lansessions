<p id="notice"><%= notice %></p>

<h1>Listing Lanparties</h1>

<div class="simple-calendar">
  <%= month_calendar(attribute: :startdate, end_attribute: :enddate) do |date| %>
    <%= date %>
  <% end %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Partyname</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lanparties.each do |lanparty| %>
      <tr>
        <td><%= lanparty.partyname %></td>
        <td><%= lanparty.startdate %></td>
        <td><%= lanparty.enddate %></td>
        <td><%= lanparty.description %></td>
        <td><%= link_to 'Show', lanparty %></td>
        <td><%= link_to 'Edit', edit_lanparty_path(lanparty) %></td>
        <td><%= link_to 'Destroy', lanparty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lanparty', new_lanparty_path, :class => "btn btn-primary" %>
