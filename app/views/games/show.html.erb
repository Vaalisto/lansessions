<%= javascript_include_tag "confirm" %>

<p>
<dl class="dl-horizontal">
	<dt>Name: </dt>
	<dd><%= @game.name %></dd>
	<dt>Year: </dt>
	<dd><%= @game.year %></dd>
	<dt>Platform: </dt>
	<dd><%= @game.platform %></dd>
</dl>
</p>

<br>

<% if @game.ratings.empty? %>
<p>The game has not been rated yet.</p>
<% else %>
<p>The game has <%= pluralize(@game.ratings.count, 'rating') %> with average of <%= @game.average_rating %></p>
<% end %>
<% if not current_user.nil? %>
	<%= form_for(@rating) do |f| %>
		<%= f.hidden_field :game_id %>
	 	<%= f.number_field :score %>
	 	<%= f.submit :class => "btn btn-primary btn-sm" %>
	<% end %>
<% end %>
<br>

<%= edit_and_destroy_buttons(@game) %>